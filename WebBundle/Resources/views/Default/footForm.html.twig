<script>

	$(document).ready(function(){
		var min_height = 100;
		$(window).scroll(function(){
		var s =$(window).scrollTop();
		if(s > min_height){
		$("#sec").fadeIn(1000)
		}else{
		$("#sec").fadeOut(1000)
		}
		});
		})
   //发送ajax请求
     $('#sub_btn1').click(function(){


        var uname = $("#Orders_Name1").val();
		var pNum = $("#inp2").val();
		var ph = /^(13[0-9]|14[57]|15[0-25-9]|17[0137]|18[0-9])\d{8}$/;
		var xueli = $("#inpxl").val();

        if( uname == '' )
        {
        	alert('请输入正确的姓名');
        	return false;
        }
        if( !ph.test(pNum) )
        {
        	alert('请输入正确的电话');
        	return false;
        }
		if( xueli == '' )
        {
        	alert('请选择学历');
        	return false;
        }
    	$(this).attr('disabled','disabled');

        $.ajax({

            url: "/ajaxindex",
			type: "post",
			dataType: "json",
			data: {
				name: uname,
				tel: pNum,
				from:location.href,
				xl:xueli,
			},
			success: function(data){
				if(data.status ){
					alert('提交成功！请等待老师与您联系');
				}else{
					alert('正在维护，请稍后再试');
				}

			}
     })

     })
</script>
